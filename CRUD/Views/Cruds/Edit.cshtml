@model Dishes


<div class="jumbotron">
<h1> @Model.Name</h1>

<a href="/">Home</a>

    <form asp-action = "/edit" asp-controller="Cruds" method = "post">
   
   <div>

        <div class="form-group">
            <span asp-validation-for="Chef" ></span><br>
            <label asp-for="Chef"></label>
            <input asp-for="Chef"><br>
        </div>

        <div class="form-group">
            <span asp-validation-for="Name" ></span><br>
            <label asp-for="Name"></label>
            <input asp-for="Name"><br>
        </div>

        <div class="form-group">
            <span asp-validation-for="Calories" ></span><br>
            <label asp-for="Calories"></label>
            <input asp-for="Calories"><br>
        </div>

    </div>

    <div>

        <div class="form-group">
            <label asp-for="Tastiness"></label>
            <select asp-for="Tastiness"><br>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>

    </div>

    <div>
         <span asp-validation-for="Description"></span><br>
        <label asp-for="Description"></label>
        <input asp-for= "Description" type="textbox" ><br>

        <input type="submit" value="Edit Dish">
    </div>

</form>
</div>
       